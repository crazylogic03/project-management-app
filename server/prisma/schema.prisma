generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  name        String
  email       String        @unique
  password    String?
  googleId    String?       @unique
  profilePic  String?       @db.LongText
  phone       String?
  country     String?
  city        String?
  zipCode     String?
  notifications Json?
  preferences   Json?
  boards      Board[]    @relation("BoardOwner")
  memberships BoardMember[]
  comments    Comment[]
  activities  Activity[]
  messages    Message[]
  receivedMessages Message[] @relation("ReceivedMessages")
  createdAt   DateTime      @default(now())
}

model Board {
  id           Int           @id @default(autoincrement())
  title        String
  description  String?
  organization String?
  createdBy    Int
  createdAt    DateTime      @default(now())
  deadline     DateTime?
  progress     Int           @default(0)
  status       String        @default("Not Started")
  template     String?
  owner        User          @relation("BoardOwner", fields: [createdBy], references: [id])
  members      BoardMember[]
  lists        List[]
  activities   Activity[]
  comments     Comment[]
  labels       Label[]
  attachments  Attachment[]
  cards        Card[]
  messages     Message[]
  invitations  Invitation[]
  color String? 
}

model BoardMember {
  id        Int      @id @default(autoincrement())
  role      String   @default("member")
  userId    Int
  boardId   Int
  user      User     @relation(fields: [userId], references: [id])
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, boardId])
}

model List {
  id        Int      @id @default(autoincrement())
  title     String
  order     Int      @default(0)
  boardId   Int
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards     Card[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Card {
  id          Int          @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime?
  priority    String?
  order       Int          @default(0)
  listId      Int
  list        List         @relation(fields: [listId], references: [id], onDelete: Cascade)
  boardId     Int
  board       Board        @relation(fields: [boardId], references: [id], onDelete: Cascade)
  comments    Comment[]
  labels      CardLabel[]
  attachments Attachment[]
  activity    Activity[]
  completed   Boolean      @default(false)
}

model Comment {
  id        Int      @id @default(autoincrement())
  content   String
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  boardId   Int
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cardId    Int?
  card      Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
}

model Activity {
  id        Int      @id @default(autoincrement())
  action    String
  message   String
  boardId   Int?
  cardId    Int?
  userId    Int?
  createdAt DateTime @default(now())

  user      User?    @relation(fields: [userId], references: [id])
  board     Board?   @relation(fields: [boardId], references: [id], onDelete: Cascade)
  card      Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
}



model Label {
  id      Int         @id @default(autoincrement())
  name    String
  color   String
  boardId Int
  board   Board       @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cards   CardLabel[]
}

model CardLabel {
  id      Int   @id @default(autoincrement())
  cardId  Int
  labelId Int
  card    Card  @relation(fields: [cardId], references: [id], onDelete: Cascade)
  label   Label @relation(fields: [labelId], references: [id], onDelete: Cascade)
}

model Attachment {
  id        Int      @id @default(autoincrement())
  url       String
  fileName  String
  fileType  String
  createdAt DateTime @default(now())
  boardId   Int
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  cardId    Int?
  card      Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
}
model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  type        String   // task, meeting, deadline
  priority    String?
  project     String?
  assignee    String?
  reminder    Int?
  notified    Boolean  @default(false)
  createdAt  DateTime @default(now())
}
model Message {
  id        Int      @id @default(autoincrement())
  content   String   @db.LongText
  createdAt DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  projectId Int?
  project   Board?   @relation(fields: [projectId], references: [id])
  recipientId Int?
  recipient User?    @relation("ReceivedMessages", fields: [recipientId], references: [id])
}

model Invitation {
  id        Int      @id @default(autoincrement())
  email     String
  token     String   @unique
  boardId   Int
  board     Board    @relation(fields: [boardId], references: [id], onDelete: Cascade)
  status    String   @default("pending") // pending, accepted, declined
  createdAt DateTime @default(now())
}
